scene_lr_medium:
  title: Lights Medium
  widget_type: scene
  entity: scene.living_room_medium
  icon_off: mdi-moon-last-quarter

scene_lr_dim:
  title: Lights Dim
  widget_type: scene
  entity: scene.living_room_dim
  icon_off: mdi-moon-new

scene_lr_off:
  title: Lights Off
  widget_type: scene
  entity: scene.living_room_off
